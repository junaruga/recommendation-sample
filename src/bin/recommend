#!/usr/bin/env ruby
# coding: utf-8

$:.unshift(File.expand_path(File.dirname(__FILE__) + '/../lib'))
require 'recommendation'

if ARGV.size < 2 then
  puts("error: invalid arguments count")
  exit(1)
end

user_id = ARGV[0].to_i
item_id = ARGV[1].to_i

if user_id == 0 or item_id == 0
  puts("error: invalid arguments number")
  exit(1)
end

engine = Recommendation::Engine.new(user_id, item_id)
recommended_item_ids = engine.recommend_item_id

puts <<-'EOS'
The users who purchased the items which you purchased are
the below items.
EOS

recommended_item_ids.each do |item_id|
  puts("  item_id: #{item_id}")
end

exit(0)

